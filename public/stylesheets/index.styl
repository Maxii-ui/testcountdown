.module--date-countdown {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
}

.module--date-countdown .module__title {
  margin: 0 0 20px 0;
  font-family: "FS Emeric Book";
  font-weight: normal;
  font-size: 36px;
  color:#fff;
  text-transform: uppercase;
}
.module--date-countdown .progress-meter .background {
  fill: #282828;
}
.module--date-countdown .progress-meter .foreground {
  fill: #fff;
}
.module--date-countdown .progress-meter text {
  font-family: "FS Emeric Book", Helvetica, Arial, sans-serif;
  font-size: 24px;
  text-transform: uppercase;
  fill: #fff;
}